@model EMS.Models.Notice

@{
    ViewData["Title"] = "Notice Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-white py-4 border-bottom">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3 class="text-primary fw-bold mb-2">@Model.Title</h3>
                        <span class="text-muted small"><i class="fa-regular fa-clock me-1"></i> Posted on @Model.PostedDate.ToString("dd MMMM yyyy")</span>
                    </div>
                    <div class="text-end">
                        @if (Model.IsForStudents)
                        {
                            <span class="badge bg-success mb-1">Student</span>
                        }
                        @if (Model.IsForTeachers)
                        {
                            <span class="badge bg-info text-dark">Teacher</span>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <div class="card-text text-dark" style="white-space: pre-wrap; line-height: 1.7;">@Model.Description</div>
            </div>
            <div class="card-footer bg-light py-3 text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 fw-bold me-2">Edit</a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to Board</a>
            </div>
        </div>
    </div>
</div>