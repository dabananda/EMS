@model IEnumerable<EMS.Models.Notice>

@{
    ViewData["Title"] = "Notice Board";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Notice Board</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <i class="fa-solid fa-plus"></i> Publish New Notice
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.OrderByDescending(n => n.PostedDate))
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fa-regular fa-calendar"></i> @item.PostedDate.ToString("dd MMM yyyy")
                    </small>
                    <div>
                        @if (item.IsForStudents)
                        {
                            <span class="badge bg-success" title="For Students"><i class="fa-solid fa-user-graduate"></i> Student</span>
                        }
                        @if (item.IsForTeachers)
                        {
                            <span class="badge bg-info text-dark" title="For Teachers"><i class="fa-solid fa-chalkboard-user"></i> Teacher</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-primary">@item.Title</h5>
                    <p class="card-text text-truncate">@item.Description</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary stretched-link">Read More</a>
                </div>
                <div class="card-footer bg-white border-top-0 text-end">
                    <div class="btn-group btn-group-sm" style="position: relative; z-index: 2;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa-solid fa-pen"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>