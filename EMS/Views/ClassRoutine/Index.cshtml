@model IEnumerable<EMS.Models.ClassRoutine>

@{
    ViewData["Title"] = "Class Routine";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-calendar-days me-2"></i> Class Routine</h2>
        <p class="text-muted mb-0">Manage and filter weekly class schedules.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary fw-bold px-4 shadow-sm">
        <i class="fa-solid fa-plus me-2"></i> Add New Routine
    </a>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-4">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small text-uppercase">Department</label>
                    <select name="departmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                        <option value="">-- All Departments --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold text-muted small text-uppercase">Semester</label>
                    <select name="semesterId" class="form-select" asp-items="ViewBag.SemesterId">
                        <option value="">-- All --</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small text-uppercase">Teacher</label>
                    <select name="teacherId" class="form-select" asp-items="ViewBag.TeacherId">
                        <option value="">-- All Teachers --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-bold text-muted small text-uppercase">Day</label>
                    <select name="day" class="form-select" asp-items="Html.GetEnumSelectList<EMS.Models.DayOfWeekEnum>()">
                        <option value="">-- All Days --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100 fw-bold">
                            <i class="fa-solid fa-filter"></i>
                        </button>
                        <a asp-action="Index" class="btn btn-light border w-100 text-muted" title="Reset">
                            <i class="fa-solid fa-rotate-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Filtered List</h6>
        <span class="badge bg-light text-dark border">Total: @Model.Count()</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Day & Time</th>
                    <th>Course Details</th>
                    <th>Room No</th>
                    <th>Instructor</th>
                    <th class="text-end pe-4">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary mb-1">@item.Day</span>
                                <div class="small fw-bold text-dark">
                                    <i class="fa-regular fa-clock me-1 text-muted"></i>
                                    @DateTime.Today.Add(item.StartTime).ToString("hh:mm tt") -
                                    @DateTime.Today.Add(item.EndTime).ToString("hh:mm tt")
                                </div>
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.Course?.Title</div>
                                <div class="small text-muted text-uppercase fw-bold">@item.Course?.CourseCode</div>
                                <div class="d-flex gap-2 mt-1">
                                    <span class="badge bg-light text-secondary border">@item.Course?.Department?.Name</span>
                                    <span class="badge bg-light text-secondary border">@item.Course?.Semester?.Name</span>
                                </div>
                            </td>
                            <td>
                                <span class="fw-bold text-dark"><i class="fa-solid fa-door-open text-warning me-1"></i> @item.RoomNo</span>
                            </td>
                            <td>
                                @if (item.Course?.Teacher != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle me-2 p-1 border"><i class="fa-solid fa-user-tie text-secondary"></i></div>
                                        <span class="small fw-bold">@item.Course.Teacher.FirstName @item.Course.Teacher.LastName</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic small">Unassigned</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Remove">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <div class="mb-3"><i class="fa-regular fa-calendar-xmark fa-3x opacity-25"></i></div>
                            <h5 class="fw-bold">No routine found</h5>
                            <p class="mb-0">Try changing the filters or add a new schedule.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>