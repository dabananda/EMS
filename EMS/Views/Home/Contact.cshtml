@{
    ViewData["Title"] = "Contact Us";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<div class="bg-light py-5 mb-5">
    <div class="container text-center">
        <h1 class="fw-bold display-5 text-primary mb-3">Get in Touch</h1>
        <p class="lead text-muted mx-auto" style="max-width: 700px;">
            Have questions or need support? We're here to help. Reach out to us using the form below or visit our campus.
        </p>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-5">

        <div class="col-lg-7">
            <div class="card border-0 shadow-sm p-4">
                <div class="card-body">
                    <h4 class="fw-bold mb-4 text-dark">Send us a Message</h4>
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Your Name">
                                    <label for="name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Your Email">
                                    <label for="email">Your Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" placeholder="Subject">
                                    <label for="subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a message here" id="message" style="height: 150px"></textarea>
                                    <label for="message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary btn-lg w-100 fw-bold" type="button" onclick="alert('Message sent successfully! (Demo)')">
                                    <i class="fa-solid fa-paper-plane me-2"></i> Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="h-100">
                <div class="card border-0 shadow-sm bg-primary text-white mb-4">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Contact Information</h4>

                        <div class="d-flex align-items-start mb-4">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                                <i class="fa-solid fa-location-dot fa-lg"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Our Location</h6>
                                <p class="mb-0 small opacity-75">
                                    Institute of Science Trade and Technology (ISTT)<br>
                                    Mirpur 15, Dhaka, Bangladesh
                                </p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start mb-4">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                                <i class="fa-solid fa-phone fa-lg"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Phone Number</h6>
                                <p class="mb-0 small opacity-75">+880 1234 567890</p>
                                <p class="mb-0 small opacity-75">+880 9876 543210</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                                <i class="fa-solid fa-envelope fa-lg"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Email Address</h6>
                                <p class="mb-0 small opacity-75">info@istt.edu.bd</p>
                                <p class="mb-0 small opacity-75">support@ems.com</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm overflow-hidden" style="height: 300px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5408.897417621071!2d90.38213050995465!3d23.808184701816863!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755c7285f7e6a75%3A0x14ddf7d3104a5602!2sInstitute%20of%20Science%20Trade%20%26%20Technology%20(ISTT)!5e1!3m2!1sen!2sbd!4v1763233851658!5m2!1sen!2sbd" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>

    </div>
</div>