@model EMS.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-info text-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-circle-info me-2"></i> Department Details</h5>
                <a asp-action="Index" class="btn btn-sm btn-light text-info fw-bold"><i class="fa-solid fa-arrow-left me-1"></i> Back</a>
            </div>
            <div class="card-body p-4">
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-sm-4 text-muted small fw-bold text-uppercase">Short Name</div>
                    <div class="col-sm-8 fw-bold text-primary">@Html.DisplayFor(model => model.Name)</div>
                </div>
                <div class="row mb-3 border-bottom pb-2">
                    <div class="col-sm-4 text-muted small fw-bold text-uppercase">Full Name</div>
                    <div class="col-sm-8 text-dark">@Html.DisplayFor(model => model.FullName)</div>
                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning fw-bold px-4">
                        <i class="fa-solid fa-pen me-2"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>