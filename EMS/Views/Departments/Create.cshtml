@model EMS.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0 fw-bold"><i class="fa-solid fa-plus-circle me-2"></i> Create Department</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold text-muted">Department Short Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-tag"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="e.g. CSE, EEE" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="FullName" class="form-label fw-bold text-muted">Full Department Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fa-solid fa-building"></i></span>
                            <input asp-for="FullName" class="form-control" placeholder="e.g. Computer Science & Engineering" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary fw-bold py-2">
                            <i class="fa-solid fa-check me-2"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-light text-muted border">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}