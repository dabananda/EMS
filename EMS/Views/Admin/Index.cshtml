@{
    ViewData["Title"] = "Dashboard";

    // Dynamic Greething logic
    var currentHour = DateTime.Now.Hour;
    string greeting;

    if (currentHour >= 5 && currentHour < 12)
    {
        greeting = "Good Morning";
    }
    else if (currentHour >= 12 && currentHour < 17)
    {
        greeting = "Good Afternoon";
    }
    else
    {
        greeting = "Good Evening";
    }
    // ----------------------------------
}

<div class="mb-4 pb-2 pt-2 border-bottom d-flex justify-content-between align-items-center">
    <div>
        <h4 class="text-dark fw-bold mb-1">@greeting, Admin! 👋</h4>
        <p class="text-muted mb-0 small">Here's your daily university overview.</p>
    </div>
    <div class="text-end">
        <h6 class="mb-0 fw-bold text-primary">@DateTime.Now.ToString("dddd")</h6>
        <small class="text-muted">@DateTime.Now.ToString("dd MMM yyyy")</small>
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100 bg-primary bg-opacity-10">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Students</h6>
                        <h2 class="mb-0 fw-bold text-primary" id="countStudent">...</h2>
                    </div>
                    <i class="fa-solid fa-user-graduate fa-2x text-primary opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100 bg-success bg-opacity-10">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Teachers</h6>
                        <h2 class="mb-0 fw-bold text-success" id="countTeacher">...</h2>
                    </div>
                    <i class="fa-solid fa-chalkboard-user fa-2x text-success opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100 bg-warning bg-opacity-10">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Courses</h6>
                        <h2 class="mb-0 fw-bold text-warning text-dark" id="countCourse">...</h2>
                    </div>
                    <i class="fa-solid fa-book-open fa-2x text-warning opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100 bg-info bg-opacity-10">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Present Today</h6>
                        <h2 class="mb-0 fw-bold text-info text-dark" id="countPresent">...</h2>
                    </div>
                    <i class="fa-solid fa-user-check fa-2x text-info opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100" style="background-color: rgba(111, 66, 193, 0.1);">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Total Departments</h6>
                        <h2 class="mb-0 fw-bold" style="color: #6f42c1;" id="countDept">...</h2>
                    </div>
                    <i class="fa-solid fa-building-columns fa-2x opacity-50" style="color: #6f42c1;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100 bg-danger bg-opacity-10">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Exams Scheduled</h6>
                        <h2 class="mb-0 fw-bold text-danger" id="countExam">...</h2>
                    </div>
                    <i class="fa-solid fa-file-pen fa-2x text-danger opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100 bg-secondary bg-opacity-10">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase small fw-bold">Notices Published</h6>
                        <h2 class="mb-0 fw-bold text-secondary text-dark" id="countNotice">...</h2>
                    </div>
                    <i class="fa-solid fa-bullhorn fa-2x text-secondary opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-8">
        <div class="card shadow-sm h-100 border-0">
            <div class="card-header bg-white py-3 border-0">
                <h6 class="mb-0 fw-bold"><i class="fa-solid fa-chart-column text-primary me-2"></i> Students per Department</h6>
            </div>
            <div class="card-body">
                <canvas id="deptChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm h-100 border-0">
            <div class="card-header bg-white py-3 border-0">
                <h6 class="mb-0 fw-bold"><i class="fa-solid fa-chart-pie text-success me-2"></i> User Ratio</h6>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <div style="width: 100%; max-width: 280px;">
                    <canvas id="userChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-8">
        <div class="card shadow-sm h-100 border-0">
            <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-bold"><i class="fa-solid fa-arrow-trend-up text-info me-2"></i> Student Enrollment by Session</h6>
            </div>
            <div class="card-body">
                <canvas id="sessionChart" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100 border-0">
            <div class="card-header bg-white py-3 border-0">
                <h6 class="mb-0 fw-bold"><i class="fa-solid fa-clipboard-check text-warning me-2"></i> Today's Attendance</h6>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center position-relative">
                <div style="width: 100%; max-width: 250px;">
                    <canvas id="attendanceChart"></canvas>
                </div>
                <div class="position-absolute text-center" style="pointer-events: none;">
                    <small class="text-muted d-block">Date</small>
                    <span class="fw-bold text-dark">@DateTime.Now.ToString("dd MMM")</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-bold"><i class="fa-solid fa-bullhorn text-secondary me-2"></i> Recent Notices</h6>
                <a asp-controller="Notices" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush" id="noticeListContainer">
                    <div class="text-center py-4 text-muted">Loading notices...</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Admin/GetDashboardStats',
                type: 'GET',
                success: function (data) {
                    // --- ১. কার্ড আপডেট
                    $('#countStudent').text(data.totalStudents);
                    $('#countTeacher').text(data.totalTeachers);
                    $('#countCourse').text(data.totalCourses);
                    $('#countPresent').text(data.presentToday);
                    $('#countDept').text(data.totalDepartments);
                    $('#countExam').text(data.totalExams);
                    $('#countNotice').text(data.totalNotices);

                    
                    // Dept Bar Chart
                    new Chart(document.getElementById('deptChart'), {
                        type: 'bar',
                        data: {
                            labels: data.studentsByDept.map(x => x.label),
                            datasets: [{
                                label: 'Students',
                                data: data.studentsByDept.map(x => x.value),
                                backgroundColor: '#0d6efd',
                                borderRadius: 4,
                                barPercentage: 0.5
                            }]
                        },
                        options: { responsive: true, plugins: { legend: { display: false } } }
                    });

                    // User Ratio Chart
                    new Chart(document.getElementById('userChart'), {
                        type: 'doughnut',
                        data: {
                            labels: ['Students', 'Teachers'],
                            datasets: [{
                                data: [data.totalStudents, data.totalTeachers],
                                backgroundColor: ['#0d6efd', '#198754'],
                                hoverOffset: 4
                            }]
                        },
                        options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
                    });

                    //  Session Wise Students (Line Chart) 
                    new Chart(document.getElementById('sessionChart'), {
                        type: 'line',
                        data: {
                            labels: data.studentsBySession.map(x => x.label),
                            datasets: [{
                                label: 'Enrollment',
                                data: data.studentsBySession.map(x => x.value),
                                borderColor: '#0dcaf0', // Info Color
                                backgroundColor: 'rgba(13, 202, 240, 0.1)',
                                tension: 0.4, // কার্ভ লাইন
                                fill: true,
                                pointBackgroundColor: '#fff',
                                pointBorderColor: '#0dcaf0',
                                pointRadius: 5
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: { legend: { display: false } },
                            scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } }
                        }
                    });

                    //  Today's Attendance (Pie Chart)
                    var present = data.attendanceStats.find(x => x.status === 'Present')?.count || 0;
                    var absent = data.attendanceStats.find(x => x.status === 'Absent')?.count || 0;
                    var late = data.attendanceStats.find(x => x.status === 'Late')?.count || 0;

                    // যদি কোনো ডেটা না থাকে
                    var noData = (present + absent + late) === 0;

                    new Chart(document.getElementById('attendanceChart'), {
                        type: 'doughnut',
                        data: {
                            labels: noData ? ['No Data'] : ['Present', 'Absent', 'Late'],
                            datasets: [{
                                data: noData ? [1] : [present, absent, late],
                                backgroundColor: noData ? ['#e9ecef'] : ['#198754', '#dc3545', '#ffc107'], // Green, Red, Yellow
                                hoverOffset: 4,
                                cutout: '70%' // মাঝখানের ফাঁকা জায়গা
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { position: 'bottom' },
                                tooltip: { enabled: !noData } // ডেটা না থাকলে টুলটিপ বন্ধ
                            }
                        }
                    });

                    // --- ৫. নোটিশ লিস্ট রেন্ডার করা ---
                    var noticeHtml = '';
                    if (data.recentNotices.length > 0) {
                        $.each(data.recentNotices, function (i, n) {
                            // ব্যাজ লজিক
                            var badges = '';
                            if (n.isForStudent) badges += '<span class="badge bg-success me-1">Student</span>';
                            if (n.isForTeacher) badges += '<span class="badge bg-info text-dark">Teacher</span>';

                            noticeHtml += `
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3 border-bottom-0 border-top">
                                    <div>
                                        <h6 class="mb-1 fw-bold text-dark">${n.title}</h6>
                                        <div class="small">${badges}</div>
                                    </div>
                                    <small class="text-muted"><i class="fa-regular fa-clock me-1"></i> ${n.date}</small>
                                </div>`;
                        });
                    } else {
                        noticeHtml = '<div class="text-center py-4 text-muted">No notices found.</div>';
                    }
                    $('#noticeListContainer').html(noticeHtml);
                },
                error: function (err) { console.error(err); }
            });
        });
    </script>
}