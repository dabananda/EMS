@model IEnumerable<EMS.Models.ApplicationUser>

@{
    ViewData["Title"] = "Teachers List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-chalkboard-user me-2"></i> Teachers</h2>
        <p class="text-muted mb-0">Manage faculty members and their details.</p>
    </div>
    <a asp-action="CreateUser" asp-route-source="Teachers" class="btn btn-primary fw-bold px-4 shadow-sm">
        <i class="fa-solid fa-user-plus me-2"></i> Add New Teacher
    </a>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-4">
        <form asp-action="Teachers" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-5">
                    <label class="form-label fw-bold text-muted small text-uppercase">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control border-start-0" placeholder="Search by Name or Email..." />
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold text-muted small text-uppercase">Department</label>
                    <select name="departmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                        <option value="">-- All Departments --</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100 fw-bold">
                            <i class="fa-solid fa-filter me-1"></i> Filter
                        </button>
                        <a asp-action="Teachers" class="btn btn-light border w-100 text-muted" title="Reset Filters">
                            <i class="fa-solid fa-rotate-right me-1"></i> Reset
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Teacher Records</h6>
        <span class="badge bg-light text-dark border">Total: @Model.Count()</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Teacher Info</th>
                    <th>Department</th>
                    <th>Contact</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var teacher in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3 text-secondary border" style="width: 40px; height: 40px;">
                                        <i class="fa-solid fa-user-tie"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@teacher.FirstName @teacher.LastName</div>
                                        <div class="small text-muted">@teacher.TeacherProfile?.Designation</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info width-fit-content">
                                    @teacher.TeacherProfile?.Department?.Name
                                </span>
                            </td>
                            <td>
                                <div class="small">
                                    <i class="fa-solid fa-phone text-muted me-1"></i> @teacher.PhoneNumber <br />
                                    <i class="fa-solid fa-envelope text-muted me-1"></i> @teacher.Email
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@teacher.Id" asp-route-source="Teachers" class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@teacher.Id" asp-route-source="Teachers" class="btn btn-sm btn-outline-warning" title="Edit Profile">
                                        <i class="fa-solid fa-user-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@teacher.Id" asp-route-source="Teachers" class="btn btn-sm btn-outline-danger" title="Delete Teacher">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <div class="mb-3"><i class="fa-solid fa-user-slash fa-3x opacity-25"></i></div>
                            <h5 class="fw-bold">No teachers found</h5>
                            <p class="mb-0">Try adjusting your search or filters.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>