@model EMS.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-danger">Delete User</h1>
<h3 class="text-danger">Are you sure you want to delete this user?</h3>
<div class="alert alert-warning">
    <i class="fa-solid fa-triangle-exclamation"></i>
    <strong>Warning:</strong> This action cannot be undone. It will delete the login account, profile, and all related data.
</div>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">Full Name</dt>
            <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">
                @if (Model.StudentProfile != null)
                {
                    <span>Student</span>
                }
                else if (Model.TeacherProfile != null)
                {

                    <span>Teacher</span>
                }
                else
                {

                    <span>Admin/Staff</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="ListUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>