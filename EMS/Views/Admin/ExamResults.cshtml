@model IEnumerable<EMS.Models.ExamResult>

@{
    ViewData["Title"] = "Exam Results";
    var exam = ViewBag.Exam as EMS.Models.Exam;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1 text-primary"><i class="fa-solid fa-list-ol"></i> Result Sheet</h2>
        <h5 class="text-muted">
            @exam.Title - @exam.Course.Title <span class="badge bg-secondary">@exam.Course.Semester?.Name</span>
        </h5>
    </div>
    <a asp-action="ManageExams" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <div class="row">
            <div class="col-md-6">
                <strong>Total Marks:</strong> @exam.TotalMarks
            </div>
            <div class="col-md-6 text-end">
                <strong>Date:</strong> @exam.ExamDate.ToString("dd MMMM yyyy")
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle text-center">
            <thead class="bg-light">
                <tr>
                    <th class="text-start ps-4">Student Info</th>
                    <th>Marks Obtained</th>
                    <th>Percentage</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var result in Model)
                    {
                        var percentage = (result.MarksObtained / exam.TotalMarks) * 100;
                        string statusClass = percentage >= 40 ? "success" : "danger";
                        string statusText = percentage >= 40 ? "Pass" : "Fail";

                        <tr>
                            <td class="text-start ps-4">
                                <div class="fw-bold">@result.Student.FirstName @result.Student.LastName</div>
                                <small class="text-muted">Roll: @result.Student.StudentProfile?.StudentRoll</small>
                            </td>
                            <td>
                                <span class="fw-bold fs-5">@result.MarksObtained</span>
                                <span class="text-muted">/ @exam.TotalMarks</span>
                            </td>
                            <td>@Math.Round(percentage, 2)%</td>
                            <td>
                                <span class="badge bg-@statusClass">@statusText</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-5">
                            <i class="fa-solid fa-clipboard-question fa-2x mb-3"></i>
                            <p class="mb-0">Marks have not been entered for this exam yet.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>