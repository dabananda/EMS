@model IEnumerable<EMS.Models.Assignment>

@{
    ViewData["Title"] = "Assignments";
    var submissions = ViewBag.MySubmissions as List<EMS.Models.AssignmentSubmission>;
}

<h2 class="mb-4"><i class="fa-solid fa-list-check text-primary"></i> Assignments</h2>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            var submitted = submissions?.FirstOrDefault(s => s.AssignmentId == item.Id);
            bool isExpired = item.Deadline < DateTime.Now;

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 @(isExpired ? "border-danger" : "border-success")">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <small class="text-muted">Course: <strong>@item.Course.CourseCode</strong></small>
                        @if (submitted != null)
                        {
                            <span class="badge bg-success">Submitted</span>
                        }
                        else if (isExpired)
                        {
                            <span class="badge bg-danger">Expired</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted small">
                            Deadline: @item.Deadline.ToString("dd MMM yyyy, h:mm tt")
                        </p>
                        <hr />
                        <p class="card-text">@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>

                        @if (submitted == null && !isExpired)
                        {
                            <a asp-action="SubmitAssignment" asp-route-id="@item.Id" class="btn btn-primary w-100">
                                <i class="fa-solid fa-upload"></i> Submit Now
                            </a>
                        }
                        else if (submitted != null)
                        {
                            <div class="d-grid gap-2">
                                <button class="btn btn-success disabled" style="opacity: 1;">
                                    <i class="fa-solid fa-check-circle"></i> Submitted on @submitted.SubmissionDate.ToString("dd MMM")
                                </button>

                                @if (submitted.MarksObtained != null)
                                {
                                    <button type="button" class="btn btn-outline-primary"
                                            data-bs-toggle="modal" data-bs-target="#resultModal"
                                            data-title="@item.Title"
                                            data-marks="@submitted.MarksObtained"
                                            data-total="@item.TotalMarks"
                                            data-feedback="@(string.IsNullOrEmpty(submitted.TeacherFeedback) ? "No feedback provided." : submitted.TeacherFeedback)">
                                        <i class="fa-solid fa-square-poll-vertical"></i> View Result
                                    </button>
                                }
                                else
                                {
                                    <div class="text-center small text-warning mt-2">
                                        <i class="fa-solid fa-clock"></i> Waiting for grading...
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100" disabled>Submission Closed</button>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center text-muted py-5">
            <i class="fa-solid fa-clipboard-check fa-3x mb-3"></i>
            <h4>No assignments available.</h4>
        </div>
    }
</div>

<div class="modal fade" id="resultModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Assignment Result</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <h4 class="mb-3 text-dark" id="modalAssignmentTitle"></h4>

                <div class="d-inline-block border border-4 border-primary rounded-circle p-4 mb-3">
                    <div class="display-4 fw-bold text-primary">
                        <span id="modalMarks"></span>
                    </div>
                    <div class="small text-muted">out of <span id="modalTotal"></span></div>
                </div>

                <hr />

                <div class="text-start">
                    <h6 class="fw-bold text-secondary"><i class="fa-solid fa-comment-dots"></i> Teacher's Feedback:</h6>
                    <div class="alert alert-light border text-dark fst-italic" id="modalFeedback">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // মোডাল ওপেন হওয়ার সময় ডেটা লোড করার স্ক্রিপ্ট
        var resultModal = document.getElementById('resultModal');
        resultModal.addEventListener('show.bs.modal', function (event) {
            // যে বাটনটিতে ক্লিক করা হয়েছে
            var button = event.relatedTarget;

            // বাটন থেকে ডেটা বের করা (data-attributes)
            var title = button.getAttribute('data-title');
            var marks = button.getAttribute('data-marks');
            var total = button.getAttribute('data-total');
            var feedback = button.getAttribute('data-feedback');

            // মোডালের ভেতরে তথ্য বসানো
            document.getElementById('modalAssignmentTitle').textContent = title;
            document.getElementById('modalMarks').textContent = marks;
            document.getElementById('modalTotal').textContent = total;
            document.getElementById('modalFeedback').textContent = feedback;
        });
    </script>
}