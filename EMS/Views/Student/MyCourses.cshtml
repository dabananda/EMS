@model IEnumerable<EMS.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<h2 class="mb-4"><i class="fa-solid fa-book-open text-success"></i> My Courses</h2>

<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0 text-muted">
            Total Courses: <span class="badge bg-success">@Model.Count()</span>
            <span class="float-end fs-6">Total Credits: @Model.Sum(c => c.Credits)</span>
        </h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th>Course Code</th>
                    <th>Title</th>
                    <th>Credits</th>
                    <th>Instructor</th>
                    <th class="text-end">Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@course.CourseCode</td>
                            <td>@course.Title</td>
                            <td>@course.Credits</td>
                            <td>
                                @if (course.Teacher != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <i class="fa-solid fa-chalkboard-user me-2 text-secondary"></i>
                                        <span>@course.Teacher.FirstName @course.Teacher.LastName</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted border">TBA</span>
                                }
                            </td>
                            <td class="text-end">
                                <span class="badge bg-info">Running</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-5">
                            <i class="fa-solid fa-folder-open fa-2x mb-3"></i>
                            <p class="mb-0">No courses found for your semester.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>