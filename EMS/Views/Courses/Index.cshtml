@model IEnumerable<EMS.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-book me-2"></i> Courses</h2>
        <p class="text-muted mb-0">Manage curriculum and course assignments.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary fw-bold px-4 shadow-sm">
        <i class="fa-solid fa-plus me-2"></i> Create New Course
    </a>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-4">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-bold text-muted small text-uppercase">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control border-start-0" placeholder="Course Title, Code or Teacher..." />
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small text-uppercase">Department</label>
                    <select name="departmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                        <option value="">-- All Departments --</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small text-uppercase">Semester</label>
                    <select name="semesterId" class="form-select" asp-items="ViewBag.SemesterId">
                        <option value="">-- All Semesters --</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100 fw-bold">
                            <i class="fa-solid fa-filter"></i>
                        </button>
                        <a asp-action="Index" class="btn btn-light border w-100 text-muted" title="Reset">
                            <i class="fa-solid fa-rotate-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Course List</h6>
        <span class="badge bg-light text-dark border">Total: @Model.Count()</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Course Info</th>
                    <th>Department</th>
                    <th>Credits</th>
                    <th>Instructor</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-3 text-primary border text-center" style="width: 45px;">
                                        <i class="fa-solid fa-book-open fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="small text-muted text-uppercase fw-bold" style="font-size: 0.75rem;">@item.CourseCode</div>
                                        <div class="fw-bold text-dark fs-6">@item.Title</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info mb-1 width-fit-content">
                                        @item.Department?.Name
                                    </span>
                                    <span class="small fw-bold text-dark">@item.Semester?.Name</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Credits Cr.</span>
                            </td>
                            <td>
                                @if (item.Teacher != null)
                                {
                                    <div class="small">
                                        <i class="fa-solid fa-chalkboard-user text-success me-1"></i>
                                        <span class="fw-bold text-dark">@item.Teacher.FirstName @item.Teacher.LastName</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted border">Unassigned</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit Course">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete Course">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <div class="mb-3"><i class="fa-solid fa-book-open-reader fa-3x opacity-25"></i></div>
                            <h5 class="fw-bold">No courses found</h5>
                            <p class="mb-0">Try creating a new course or adjusting filters.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>