@model EMS.Models.Semester

@{
    ViewData["Title"] = "Semester Details";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4 border-0">
            <div class="card-header bg-info text-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i> Semester Details</h5>
                <a asp-action="Index" class="btn btn-sm btn-light text-info fw-bold"><i class="fa-solid fa-arrow-left me-1"></i> Back</a>
            </div>
            <div class="card-body p-4 text-center">

                <div class="mb-4">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-3 text-info">
                        <i class="fa-solid fa-layer-group fa-3x"></i>
                    </div>
                    <h3 class="text-primary fw-bold">@Model.Name</h3>
                    <p class="text-muted">Semester ID: @Model.Id</p>
                </div>

                <div class="d-flex justify-content-center gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4 fw-bold">
                        <i class="fa-solid fa-pen me-2"></i> Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>