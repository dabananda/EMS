@model IEnumerable<EMS.Models.ApplicationUser>

@{
    ViewData["Title"] = "My Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-users-viewfinder me-2"></i> My Students</h2>
        <p class="text-muted mb-0">List of all students enrolled in your courses.</p>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-4">
        <form method="get" asp-action="MyStudents">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-bold text-muted small text-uppercase">Filter by Course</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-book text-muted"></i></span>
                        <select name="courseId" class="form-select border-start-0" asp-items="ViewBag.CourseList" onchange="this.form.submit()">
                            <option value="">-- All Courses --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold text-muted small text-uppercase">Filter by Semester</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-layer-group text-muted"></i></span>
                        <select name="semesterId" class="form-select border-start-0" asp-items="ViewBag.SemesterList" onchange="this.form.submit()">
                            <option value="">-- All Semesters --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="d-grid">
                        <a asp-action="MyStudents" class="btn btn-outline-secondary fw-bold">
                            <i class="fa-solid fa-rotate-right me-2"></i> Reset Filters
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Student List</h6>
        <span class="badge bg-light text-dark border">Total: @Model.Count()</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Student Info</th>
                    <th>Academic Details</th>
                    <th>Contact Info</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-3 text-secondary border" style="width: 45px; height: 45px;">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@student.FirstName @student.LastName</div>
                                        <div class="small text-muted">Roll: <span class="text-dark fw-bold">@student.StudentProfile?.StudentRoll</span></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info width-fit-content">
                                        @student.StudentProfile?.Department?.Name
                                    </span>
                                    <span class="small fw-bold text-dark">
                                        <i class="fa-solid fa-calendar-days me-1 text-muted"></i> @student.StudentProfile?.Semester?.Name
                                    </span>
                                    <span class="small text-muted">Reg: @student.StudentProfile?.RegistrationNo</span>
                                </div>
                            </td>
                            <td>
                                <div class="small">
                                    <div class="mb-1"><i class="fa-solid fa-phone text-success me-2"></i> @student.PhoneNumber</div>
                                    <div><i class="fa-solid fa-envelope text-primary me-2"></i> @student.Email</div>
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="StudentDetails" asp-route-id="@student.Id" class="btn btn-sm btn-outline-info fw-bold shadow-sm" title="View Profile">
                                    <i class="fa-solid fa-id-card me-1"></i> Profile
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <div class="mb-3"><i class="fa-solid fa-users-slash fa-3x opacity-25"></i></div>
                            <h5 class="fw-bold">No students found</h5>
                            <p class="mb-0">Try adjusting the filters to see results.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>