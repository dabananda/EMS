@model IEnumerable<EMS.Models.ClassRoutine>

@{
    ViewData["Title"] = "My Class Schedule";
    var groupedRoutine = Model.GroupBy(r => r.Day).OrderBy(g => g.Key);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-calendar-week me-2"></i> My Class Schedule</h2>
        <p class="text-muted mb-0">Your weekly teaching routine.</p>
    </div>
</div>

<div class="card shadow-sm border-0 mb-4 bg-light">
    <div class="card-body py-3">
        <form method="get" asp-action="MyClassSchedule">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label fw-bold text-muted small text-uppercase">Filter by Semester</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-layer-group text-muted"></i></span>
                        <select name="semesterId" class="form-select border-start-0" asp-items="ViewBag.SemesterId" onchange="this.form.submit()">
                            <option value="">-- All Semesters --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-bold text-muted small text-uppercase">Filter by Day</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-calendar-day text-muted"></i></span>
                        <select name="day" class="form-select border-start-0" asp-items="Html.GetEnumSelectList<EMS.Models.DayOfWeekEnum>()" onchange="this.form.submit()">
                            <option value="">-- All Days --</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <a asp-action="MyClassSchedule" class="btn btn-outline-secondary fw-bold w-100">
                        <i class="fa-solid fa-rotate-right me-2"></i> Reset Filter
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5 text-muted bg-light rounded border border-dashed mb-5">
        <i class="fa-regular fa-calendar-xmark fa-3x mb-3 opacity-25"></i>
        <h5>No class schedule found.</h5>
        <p class="mb-0">Try changing the filters to see results.</p>
    </div>
}
else
{
    <div class="row g-4 mb-5">
        @foreach (var dayGroup in groupedRoutine)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-info text-white py-3">
                        <h5 class="mb-0 fw-bold text-center">@dayGroup.Key</h5>
                    </div>

                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var routine in dayGroup)
                            {
                                <div class="list-group-item p-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge bg-light text-primary border fw-bold">
                                            <i class="fa-regular fa-clock me-1"></i>
                                            @DateTime.Today.Add(routine.StartTime).ToString("hh:mm tt") -
                                            @DateTime.Today.Add(routine.EndTime).ToString("hh:mm tt")
                                        </span>
                                        <span class="badge bg-warning text-dark shadow-sm">Room: @routine.RoomNo</span>
                                    </div>

                                    <h6 class="fw-bold text-dark mb-1">@routine.Course?.Title</h6>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="small text-muted">Code: <span class="fw-bold text-primary">@routine.Course?.CourseCode</span></div>
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary" style="font-size: 0.7rem;">
                                            @routine.Course?.Semester?.Name
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}