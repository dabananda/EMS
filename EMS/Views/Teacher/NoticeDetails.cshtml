@model EMS.Models.Notice

@{
    ViewData["Title"] = "Notice Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="mb-3">
            <a asp-action="Notices" class="btn btn-outline-secondary btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Notice Board
            </a>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-4 border-bottom">
                <div class="d-flex flex-column gap-2">
                    <div>
                        <span class="badge bg-info bg-opacity-10 text-info border border-info">
                            <i class="fa-solid fa-bullhorn me-1"></i> Announcement
                        </span>
                        <span class="badge bg-light text-secondary border ms-1">
                            <i class="fa-regular fa-clock me-1"></i> @Model.PostedDate.ToString("dd MMMM yyyy")
                        </span>
                    </div>

                    <h3 class="text-primary fw-bold mb-0 mt-2">@Model.Title</h3>
                </div>
            </div>

            <div class="card-body p-4 p-md-5">
                <div class="card-text text-dark" style="white-space: pre-wrap; line-height: 1.8; font-size: 1.05rem;">
                    @Html.Raw(Model.Description.Replace("\n", "<br>"))
                </div>
            </div>

            <div class="card-footer bg-light py-3 text-center text-muted small">
                Thank you for your attention.
            </div>
        </div>
    </div>
</div>