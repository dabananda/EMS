@model IEnumerable<EMS.Models.Course>

@{
    ViewData["Title"] = "My Assigned Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-primary fw-bold"><i class="fa-solid fa-chalkboard-user me-2"></i> My Courses</h2>
        <p class="text-muted mb-0">Overview of all courses assigned to you.</p>
    </div>
</div>

<div class="card shadow-sm border-0 mb-5">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="mb-0 fw-bold text-primary"><i class="fa-solid fa-list me-2"></i> Course List</h6>
        <span class="badge bg-light text-dark border">Total: @Model.Count()</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Course Info</th>
                    <th>Department & Semester</th>
                    <th class="text-center">Credits</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-3 text-primary border text-center" style="width: 45px;">
                                        <i class="fa-solid fa-book-open fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="small text-muted text-uppercase fw-bold" style="font-size: 0.75rem;">@course.CourseCode</div>
                                        <div class="fw-bold text-dark fs-6">@course.Title</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info mb-1 width-fit-content">
                                        @course.Department?.Name
                                    </span>
                                    <span class="small fw-bold text-dark">@course.Semester?.Name</span>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-secondary">@course.Credits Cr.</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="EnrolledStudents" asp-route-courseId="@course.Id" class="btn btn-sm btn-outline-info fw-bold shadow-sm" title="View Enrolled Students">
                                    <i class="fa-solid fa-users me-1"></i> Students
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <div class="mb-3"><i class="fa-solid fa-folder-open fa-3x opacity-25"></i></div>
                            <h5 class="fw-bold">No courses assigned yet</h5>
                            <p class="mb-0">Contact admin if you think this is a mistake.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>