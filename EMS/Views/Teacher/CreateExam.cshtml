@model EMS.Models.Exam

@{
    ViewData["Title"] = "Schedule Exam";
}

<h3 class="mb-4">Schedule New Exam</h3>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="CreateExam">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="CourseId" class="form-label fw-bold">Select Course</label>
                        <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId">
                            <option value="">-- Select Course --</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Title" class="form-label">Exam Title</label>
                            <input asp-for="Title" class="form-control" placeholder="e.g., Midterm Exam" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExamType" class="form-label">Exam Type</label>
                            <select asp-for="ExamType" class="form-select" asp-items="Html.GetEnumSelectList<EMS.Models.ExamType>()"></select>
                            <span asp-validation-for="ExamType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExamDate" class="form-label">Exam Date</label>
                            <input asp-for="ExamDate" class="form-control" type="date" />
                            <span asp-validation-for="ExamDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TotalMarks" class="form-label">Total Marks</label>
                            <input asp-for="TotalMarks" class="form-control" type="number" />
                            <span asp-validation-for="TotalMarks" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-calendar-plus"></i> Schedule Exam
                        </button>
                        <a asp-action="ManageExams" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>