@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="mb-4 text-primary border-bottom pb-2">@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label fw-bold text-muted small">Username / Email</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="fa-solid fa-user-tag"></i></span>
            <input asp-for="Username" class="form-control bg-light" disabled />
        </div>
    </div>

    <div class="mb-4">
        <label asp-for="Input.PhoneNumber" class="form-label fw-bold">Phone Number</label>
        <div class="input-group">
            <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
        </div>
        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
    </div>

    <button id="update-profile-button" type="submit" class="btn btn-primary px-4">
        <i class="fa-solid fa-floppy-disk me-2"></i> Save Changes
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}