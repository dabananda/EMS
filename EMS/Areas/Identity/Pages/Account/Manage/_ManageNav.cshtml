@using EMS.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column gap-1">
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().EndsWith("Index") ? "active" : "text-dark")" id="profile" asp-page="./Index">
            <i class="fa-solid fa-user me-2"></i> Profile
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().EndsWith("Email") ? "active" : "text-dark")" id="email" asp-page="./Email">
            <i class="fa-solid fa-envelope me-2"></i> Email
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().EndsWith("ChangePassword") ? "active" : "text-dark")" id="change-password" asp-page="./ChangePassword">
            <i class="fa-solid fa-key me-2"></i> Password
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().EndsWith("ExternalLogins") ? "active" : "text-dark")" id="external-login" asp-page="./ExternalLogins">
                <i class="fa-brands fa-google me-2"></i> External Logins
            </a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().EndsWith("TwoFactorAuthentication") ? "active" : "text-dark")" id="two-factor" asp-page="./TwoFactorAuthentication">
            <i class="fa-solid fa-shield-halved me-2"></i> Two-factor Auth
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().EndsWith("PersonalData") ? "active" : "text-dark")" id="personal-data" asp-page="./PersonalData">
            <i class="fa-solid fa-database me-2"></i> Personal Data
        </a>
    </li>
</ul>